{
    "name": "ql/mcp-panthor",
    "description": "A thin microframework built on Slim and Symfony",

    "type": "library",
    "keywords": [ "mcp", "quickenloans", "microframework" ],
    "license": "MIT",

    "authors": [
        { "name": "Steve Kluck", "email": "stevekluck@quickenloans.com" }
    ],

    "autoload": {
        "psr-4": { "QL\\Panthor\\": "src" }
    },

    "require": {
        "php": "~7.1",

        "dflydev/fig-cookies": "~1.0",
        "psr/container":       "~1.0",
        "psr/http-message":    "~1.0",
        "psr/log":             "~1.0",
        "ql/mcp-common":       "~2.0",
        "slim/slim":           "~3.10"
    },

    "require-dev": {
        "mockery/mockery": "~1.0",
        "phpunit/phpunit": "~6.0",
        "codacy/coverage": "~1.4",

        "overtrue/phplint":          "~1.0",
        "phpstan/phpstan":           "~0.9",
        "squizlabs/php_codesniffer": "~3.0",

        "ext-sodium": "~2.0 || ~7.2",

        "slevomat/coding-standard":     "~4.0",
        "symfony/config":               "~4.0",
        "symfony/dependency-injection": "~4.0",
        "symfony/yaml":                 "~4.0",
        "symfony/proxy-manager-bridge": "~4.0",
        "twig/twig":                    "~2.4"
    },

    "suggest": {
        "ext-sodium": "~2.0 || ~7.2 Libsodium recommended for secure cookie encryption."
    }
}

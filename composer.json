{
    "name": "ql/mcp-panthor",
    "description": "A thin microframework built on Slim and Symfony",

    "type": "library",
    "keywords": [ "mcp", "quickenloans", "microframework" ],
    "license": "MIT",

    "authors": [
        { "name": "Steve Kluck", "email": "stevekluck@quickenloans.com" }
    ],

    "autoload": {
        "psr-4": { "QL\\Panthor\\": "src" }
    },

    "archive": {
        "exclude": [ "/tests", "/phpunit.xml.dist" ]
    },

    "require": {
        "php": "~7.1",

        "acclimate/container": "~2.0.0",
        "dflydev/fig-cookies": "~1.0",
        "psr/http-message":    "~1.0",
        "psr/log":             "*",
        "ql/mcp-common":       "~2.0",
        "slim/slim":           "~3.10",

        "symfony/config":               "~4.0",
        "symfony/dependency-injection": "~4.0",
        "symfony/yaml":                 "~4.0"
    },

    "require-dev": {
        "mockery/mockery":      "~1.1",
        "phpunit/phpunit":      "~6.5",
        "codacy/coverage":      "~1.4",

        "ext-sodium":           "~2.0 || ~7.2",

        "symfony/proxy-manager-bridge": "~4.0",
        "twig/twig": "~2.4"
    },

    "suggest": {
        "ext-sodium": "~2.0 || ~7.2 Libsodium recommended for secure cookie encryption."
    }
}

{
    "name": "ql/mcp-panthor",
    "description": "A thin microframework built on Slim and Symfony",

    "type": "library",
    "keywords": [ "mcp", "quickenloans", "microframework" ],
    "license": "MIT",

    "authors": [
        { "name": "Steve Kluck", "email": "stevekluck@quickenloans.com" }
    ],

    "autoload": {
        "psr-4": { "QL\\Panthor\\": "src" }
    },

    "archive": {
        "exclude": [ "/tests", "/phpunit.xml.dist" ]
    },

    "require": {
        "php": "~5.6 || ~7.0",

        "acclimate/container": "~1.0.0",
        "dflydev/fig-cookies": "~1.0",
        "psr/http-message":    "~1.0",
        "psr/log":             "*",
        "ql/mcp-common":       "~1.0",
        "slim/slim":           "~3.4",

        "symfony/config":               "~3.0",
        "symfony/dependency-injection": "~3.0",
        "symfony/yaml":                 "~3.0"

    },

    "require-dev": {
        "mockery/mockery":      "~0.9",
        "phpunit/phpunit":      "~5.6",
        "codacy/coverage":      "~1.4",
        
        "ext-libsodium":           "~1.0",
        "paragonie/random_compat": "~1.1",

        "twig/twig": "*"
    },

    "suggest": {
        "ext-libsodium": "~1.0 PECL Libsodium recommended for secure cookie encryption."
    }
}
